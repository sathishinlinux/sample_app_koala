<script type="text/javascript">

$(document).ready(function(){
// alert('hai');
   $('#facebook_info').dialog({
      			autoOpen: false,
				width : 460,
				height : 500      


      });
     
   $('#twitter_info').dialog({
      			autoOpen: false,
				width : 460,
				height : 500      


      });
